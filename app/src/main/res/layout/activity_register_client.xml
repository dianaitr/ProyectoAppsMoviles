<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterClientActivity"
    android:orientation="vertical"
    android:background="#57B2B4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#57B2B4"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear una cuenta"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="¿Cómo te llamas?"
                android:textSize="16dp"
                android:id="@+id/tv_nombreCliente"/>


            <EditText
                android:id="@+id/txtNameClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtLastNamesClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:textSize="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="¿Cúal es tu dirección de domicilio?"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtAdressClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="¿Cúal es tu fecha de nacimiento?"
                android:textSize="16dp"
                android:id="@+id/tv_fechaCliente"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:layout_gravity="left"
                android:id="@+id/btn_fechaCliente"/>

            <EditText
                android:id="@+id/txtDateOfBirthClient"
                android:layout_width="30mm"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:hint=""

                android:textSize="16dp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="¿Cúal es tu genero?"
                android:textSize="16dp"
                android:id="@+id/tv_generoCliente"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/grupo_radioBtnCliente">

                <RadioButton
                    android:id="@+id/rdFemaleCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Femenino"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rdMaleCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:textSize="16dp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="¿Cúal es tu correo electrónico?"
                android:textSize="16dp"
                android:id="@+id/tv_correoCliente"/>


            <EditText
                android:id="@+id/txtEmailCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_continuarCliente"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#B0CA36"
                android:text="Continuar" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>