<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee_activities.RegisterEmployeeActivity"
    android:background="#81C8CA"
    android:orientation="vertical"
>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear una cuenta"
        android:textSize="25dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¿Cómo te llamas?"
    android:textSize="16dp"
    android:layout_gravity="left"
    android:layout_marginTop="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombres"
        android:id="@+id/txtName"
        android:textSize="16dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:textSize="16dp"
        android:id="@+id/txtLastNames"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu dirección de domicilio?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:textSize="16dp"
        android:id="@+id/txtAdress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu fecha de nacimiento?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="00/00/0000"
                android:textSize="16dp"
                android:id="@+id/txtDateOfBirth"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendario"
                android:background="#B0CA36"
                android:id="@+id/btn_calendar"/>



        </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu genero?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/rdSex">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino"
            android:textSize="16dp"
            android:id="@+id/rdFemale"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textSize="16dp"
            android:id="@+id/rdMale"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu correo electrónico?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:textSize="16dp"
            android:id="@+id/txtEmail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Cúal es tu número de teléfono?"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de telefono"
            android:textSize="16dp"
            android:id="@+id/txtTel"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Con qué número podemos identificarte?"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N° de identificación"
            android:textSize="16dp"
            android:id="@+id/txtCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué servicios prestarás?"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="16dp"

            android:background="#57B2B4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aseo básico para el hogar"
                    android:textSize="12dp"
                    android:id="@+id/cb"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barrer"
                    android:textSize="12dp"
                    android:id="@+id/cb0"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trapear"
                    android:textSize="12dp"
                    android:id="@+id/cb1"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desempolvar"
                    android:textSize="12dp"
                    android:id="@+id/cb2"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lavado de ropa"
                    android:textSize="12dp"
                    android:id="@+id/cb3"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planchado de ropa"
                    android:textSize="12dp"
                    android:id="@+id/cb4"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza de baños"
                    android:textSize="12dp"
                    android:id="@+id/cb5"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cocina"
                    android:textSize="12dp"
                    android:id="@+id/cb6"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza de cocina"
                    android:textSize="12dp"
                    android:id="@+id/cb7"/>


            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podrás editar las fechas y horas de prestación de servicio en tu perfil."
            android:textSize="12dp"
            android:layout_gravity="left"
           />

        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acepto los términos y condiciones de este enlace."
            android:textColor="	#00008B"
            android:textSize="12dp"
            android:id="@+id/rdAcceptTermsCond"/>

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btn_register"
            android:background="#B0CA36"/>



    </LinearLayout>

</ScrollView>
</LinearLayout>