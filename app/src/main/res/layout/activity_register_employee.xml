<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee_activities.RegisterEmployeeActivity"
    android:background="#81C8CA"
    android:orientation="vertical"
>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear una cuenta"
        android:textSize="25dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¿Cómo te llamas?"
    android:textSize="16dp"
    android:layout_gravity="left"
    android:layout_marginTop="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombres"
        android:id="@+id/txtName"
        android:textSize="16dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:textSize="16dp"
        android:id="@+id/txtLastNames"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu dirección de domicilio?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:textSize="16dp"
        android:id="@+id/txtAdress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu fecha de nacimiento?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DD-MM-YYYY"
        android:textSize="16dp"
        android:id="@+id/txtDateOfBirth"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu genero?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino"
            android:textSize="16dp"
            android:id="@+id/rdFemale"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textSize="16dp"
            android:id="@+id/rdMale"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cúal es tu correo electrónico?"
        android:textSize="16dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:textSize="16dp"
            android:id="@+id/txtEmail"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Con qué número podemos identificarte?"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N° de identificación"
            android:textSize="16dp"
            android:id="@+id/txtCC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué servicios prestarás?"
            android:textSize="16dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"/>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N° de identificación"
            android:textSize="16dp"
            android:id="@+id/listViewServices"
            android:background="#57B2B4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podrás editar las fechas y horas de prestación de servicio en tu perfil."
            android:textSize="12dp"
            android:layout_gravity="left"
           />

        <RadioButton
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acepto los términos y condiciones de este enlace."
            android:textColor="	#00008B"
            android:textSize="12dp"/>

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btn_register"
            android:background="#B0CA36"/>



    </LinearLayout>

</ScrollView>
</LinearLayout>