<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context=".client_activities.PerfilClienteActivity"
    android:orientation="vertical"
    android:background="#57B2B4">


    <LinearLayout
        android:layout_width="70mm"
        android:layout_height="50mm"
        android:orientation="vertical"
        android:background="#B0CA36"
        >

        <ImageView
            android:id="@+id/person1_imagen"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="24mm"
            android:layout_marginTop="10mm"
            android:background="@drawable/person1"/>

        <TextView
            android:id="@+id/tv_nameCliente"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="24mm"
            android:layout_marginTop="6mm"
            android:text="Pepita Perez"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/tv_localidadCliente"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25mm"
            android:layout_marginTop="1mm"
            android:text="Cali, Valle del Cauca"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView

            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="27mm"
            android:text="Calificación"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/tv_calificacionCliente"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="29mm"
            android:text="4.3"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#000"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_historialCliente"
        android:layout_width="100mm"
        android:layout_height="6mm"
        android:background="#C0CCDA"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:text="Historial de solicitudes pedidas"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#000"
        />


    <Button
        android:id="@+id/btn_nuevoServicioCliente"
        android:layout_width="20mm"
        android:layout_height="6mm"
        android:background="#B0CA36"
        android:layout_marginTop="15mm"
        android:layout_marginLeft="20mm"
        android:textAllCaps="false"
        android:text="Buscar un nuevo servicio"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/tv_ayudaCliente"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="24mm"
        android:layout_marginTop="6mm"

        android:text="¿Necesitas ayuda?"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#ffff"/>
    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="20mm"
        android:layout_height="6mm"
        android:background="#B0CA36"
        android:layout_marginTop="2mm"
        android:layout_marginLeft="20mm"
        android:textAllCaps="false"
        android:text="Cerrar sesión"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="#fff"
        />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        design:menu="@menu/menu_navigation"
        android:background="#ffff"
        android:layout_marginTop="2mm"
        android:id="@+id/btn_navigation"

        />


</LinearLayout>